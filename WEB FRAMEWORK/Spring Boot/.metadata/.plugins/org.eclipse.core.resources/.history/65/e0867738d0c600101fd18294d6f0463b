package com.example.taskmanager.service;

import com.example.taskmanager.bean.Task;
import com.example.taskmanager.repository.TaskRepository;
import lombok.RequiredArgsConstructor;
import org.springframework.stereotype.Service;
import java.time.LocalDate;
import java.util.List;

@Service
@RequiredArgsConstructor
public class TaskService {

    private final TaskRepository repo;

    public Task addTask(Task t) {
        return repo.save(t);
    }

    public Task updateTask(Task t) {
        return repo.save(t);
    }

    public void deleteTask(Integer id) {
        repo.deleteById(id);
    }

    public List<Task> getAll() {
        return repo.findAll();
    }

    public List<Task> searchByStatus(String s) {
        return repo.findByStatusIgnoreCase(s);
    }

    public List<Task> byPriority(String p) {
        return repo.findByPriorityIgnoreCase(p);
    }

    public List<Task> overdue() {
        LocalDate today = LocalDate.now();

        return repo.findAll().stream()
        		.filter(t -> t.dueDate != null && t.dueDate.isBefore(today))
        		.filter(t -> t.status == null || !t.status.equalsIgnoreCase("completed"));

        
        
    }
}
